<UserControl x:Class="PcParted.UserControl3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PcParted"
             mc:Ignorable="d"
             Width="110"
             Height="175"
             PreviewMouseLeftButtonDown=" UC_clicked"
             x:Name="card">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="Gray" />
            <Setter Property="FontSize"
                    Value="12" />
            <Setter Property="FontFamily"
                    Value="Unispace" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
            <Setter Property="VerticalAlignment"
                    Value="Top" />
        </Style>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Left"
          Height="179"
          Margin="0,0,0,0"
          VerticalAlignment="Top"
          Width="100"
          x:Name="grectanctle">

        <Rectangle Fill="Gray"
                   HorizontalAlignment="Left"
                   Height="169"
                   VerticalAlignment="Top"
                   Width="109"
                   Margin="0,0,-9,0"
                   Grid.ColumnSpan="3"
                   RadiusY="10"
                   RadiusX="10">
        </Rectangle>
        <Rectangle Fill="	#99aab5"
                   x:Name="Bluectangle"
                   HorizontalAlignment="Left"
                   Height="110"
                   VerticalAlignment="Bottom"
                   Width="108"
                   Margin="0,0,-8,-1"
                   RenderTransformOrigin="0.5,0.5"
                   Grid.ColumnSpan="3">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="180" />
                    <TranslateTransform />
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Clip>
                <RectangleGeometry Rect="-1,5,110,200"
                                   RadiusX="10"
                                   RadiusY="10" />
            </Rectangle.Clip>
        </Rectangle>
        <Rectangle Grid.ColumnSpan="3"
                   Fill="#4AB8FF"
                   HorizontalAlignment="Left"
                   Height="55"
                   Margin="10,113,0,0"
                   VerticalAlignment="Top"
                   Width="88"
                   RadiusY="10"
                   RadiusX="10">
        </Rectangle>
        <TextBlock x:Name="nom_carte"
                   HorizontalAlignment="Left"
                   Margin="7,85,-6,0"
                   Text="Galax 1050 TI"
                   Width="99"
                   Grid.ColumnSpan="3"
                   Foreground="Black" />
        <TextBlock x:Name="eth_S"
                   HorizontalAlignment="Left"
                   Margin="16,120,0,0"
                   Text="5.87 MH/s"
                   Foreground="#F6C78E" />
        <TextBlock x:Name="eth_S_Copy"
                   HorizontalAlignment="Left"
                   Margin="16,133,0,0"
                   Text="160 Watts"
                   Foreground="#DBDE86" />
        <TextBlock x:Name="eth_S_Copy1"
                   HorizontalAlignment="Left"
                   Margin="32,147,0,0"
                   Text="150 €"
                   Foreground="#8CFFCA" />
        <Grid>
            <Image x:Name="ImgCard"
                   Loaded="ImgCard_Loaded"
                   Source="https://www.techpowerup.com/gpudb/placeholder_nvidia.jpg"
                   Grid.ZIndex="2"
                   Margin="0,6,-9,109"
                   SnapsToDevicePixels="True" />
        </Grid>
    </Grid>
</UserControl>

